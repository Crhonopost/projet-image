{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C/C++ Debug (gdb Launch)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/code/main",
        "args": [
          "assets/prof/colormap.ppm"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/code/",
        "environment": [],
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }